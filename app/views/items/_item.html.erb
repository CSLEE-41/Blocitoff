<% @user.items.each do |item| %>
  <div class= "row" id="item-<%= item.id %>">
    <div class= "media">
      
          <%= item.name %> 
            | <%= link_to "delete", [@user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %><br>
        <small>
         <%= item.days_left %> days left to complete this item.
        </small>
      <hr>
    </div>
  </div>
<% end %>
    
    






